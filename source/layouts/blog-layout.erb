<% wrap_layout :layout do %>

  <article class='article-detail'>

    <h2 class='detail-post-title'><%= title %></h2>
        <% if topic_list %>
          <h4 class='topic-list'><%= topic_list %></h4>
        <% end %>

    <div class='slick-container'>  
      <div class="your-class">
      <% current_page.data.contentful_pics.each do |pic_id| %>
        <div>
          <figure class="image-block__figure"><img src="//images.contentful.com/<%= pic_id %>" sizes="(min-width: 1160px) 1160px, 96vw" alt="" class="image-block__figure-image">
          </figure>
        </div>
      <% end %>
      </div>
    </div>

    <% if soundcloud_id %>
      <section class='soundcloud-player-big'>
        <iframe 
          width="100%" 
          height="450" 
          scrolling="no" 
          frameborder="no" 
          src=<%= big_soundcloud_player %>>
        </iframe>
      </section>
    <% end %>

  <h3 id='other-episodes'>Interviews</h3>
  <% current_page.data.vimeo_vids.each do |vid_id| %>
    <div class='vimeo-player vimeo-spacing'> 
      <iframe src="https://player.vimeo.com/video/<%= vid_id %>?color=ababab&portrait=0"
        width="640"
        height="360"
        frameborder="0"
        webkitallowfullscreen
        mozallowfullscreen
        allowfullscreen>
      </iframe>
    </div>
  <% end %>

    <!--- <% if interviewee %>
      <h3 id='other-episodes'>Other Episodes</h3>
      <a class='other-episodes' href="/tags/<%= dasherize(interviewee) %>"><%= interviewee %></a>
    <% end %> -->
  
    <%= current_article.body %>
  
  </article>

<% end %>
